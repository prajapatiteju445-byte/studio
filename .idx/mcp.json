{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp"
      ],
      "env": {
        "SERVICE_ACCOUNT_KEY_PATH": "/absolute/path/to/your/serviceAccountKey.json",
        "FIREBASE_STORAGE_BUCKET": "your-project-id.appspot.com"
      }
    }
  }
}
